<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x35"
            android:text="海南"
            android:textColor="@color/colorOrange"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x15"
            android:src="@drawable/down_orange" />

        <LinearLayout
            android:layout_width="@dimen/x460"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x10"
            android:background="@drawable/sousuokuang_gray"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x20"
                android:src="@drawable/sousuo_black" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/x60"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x10"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="搜展会" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/colorDivision" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_find_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_find_hainan"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>