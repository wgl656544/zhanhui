<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_position_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:background="@color/white">


        <ImageView
            style="@style/Widget.AppCompat.ActionButton"
            android:scaleType="centerInside"
            android:id="@+id/iv_position_back"
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:src="@drawable/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="展位预定"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_position_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_position_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x40"
        android:text="预定信息"
        android:textColor="@color/colorOrange"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tv_position_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_position_company_name"
        android:layout_alignTop="@+id/et_position_company_name"
        android:layout_marginStart="@dimen/x80"
        android:gravity="center"
        android:text="公司名称："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_position_company_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignStart="@+id/et_position_email"
        android:layout_below="@+id/tv_position_content"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:layout_toEndOf="@+id/tv_position_email"
        android:background="@drawable/bg_et_apply"
        android:maxLines="1"
        android:paddingStart="@dimen/x20"
        android:textColor="@color/text_color"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_position_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_position_contact_name"
        android:layout_alignStart="@+id/tv_position_company_name"
        android:layout_alignTop="@+id/et_position_email"
        android:gravity="center"
        android:text="邮箱："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_position_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignStart="@+id/et_position_contact_name"
        android:layout_below="@+id/et_position_company_name"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:layout_toEndOf="@+id/tv_position_email"
        android:background="@drawable/bg_et_apply"
        android:maxLines="1"
        android:paddingStart="@dimen/x20"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_position_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_position_contact_name"
        android:layout_alignStart="@+id/tv_position_email"
        android:layout_below="@+id/tv_position_email"
        android:layout_marginTop="@dimen/x40"
        android:gravity="center"
        android:text="联系人："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_position_contact_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignStart="@+id/btn_position_commit"
        android:layout_below="@+id/et_position_email"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_et_apply"
        android:maxLines="1"
        android:paddingStart="@dimen/x20"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_position_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_position_mobile"
        android:layout_alignStart="@+id/tv_position_contact_name"
        android:layout_alignTop="@+id/et_position_mobile"
        android:gravity="center"
        android:text="联系电话："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_position_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignStart="@+id/btn_position_commit"
        android:layout_below="@+id/et_position_contact_name"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_et_apply"
        android:inputType="number"
        android:maxLines="1"
        android:paddingStart="@dimen/x20"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_position_duty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_position_duty"
        android:layout_alignStart="@+id/tv_position_mobile"
        android:layout_alignTop="@+id/et_position_duty"
        android:gravity="center"
        android:text="职务："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_position_duty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignStart="@+id/btn_position_commit"
        android:layout_below="@+id/et_position_mobile"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_et_apply"
        android:maxLines="1"
        android:paddingStart="@dimen/x20"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_position_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_position_remark"
        android:layout_alignStart="@+id/tv_position_company_name"
        android:layout_alignTop="@+id/et_position_remark"
        android:gravity="center"
        android:text="备注："
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_position_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_alignStart="@+id/btn_position_commit"
        android:layout_below="@+id/et_position_duty"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_et_apply"
        android:maxLines="1"
        android:paddingStart="@dimen/x20"
        android:textColor="@color/text_color"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btn_position_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x100"
        android:background="@drawable/button_bg_orange"
        android:text="立即预定"
        android:textColor="@color/white" />


</RelativeLayout>