<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/ripple_item_clicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_my_msg_pic"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginStart="@dimen/x20"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_my_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/x10"
            android:layout_toEndOf="@+id/iv_my_msg_pic"
            android:text="标题"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_my_msg_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_msg_title"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:layout_toEndOf="@+id/iv_my_msg_pic"
            android:text="内容" />

        <TextView
            android:id="@+id/tv_my_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_my_msg_body"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x5"
            android:layout_toEndOf="@+id/iv_my_msg_pic"
            android:text="时间" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/x30"
        android:background="@color/colorDivision" />

</LinearLayout>