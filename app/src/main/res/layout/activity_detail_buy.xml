<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_detail_buy_back"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/x20"
            android:paddingTop="@dimen/x20"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/iv_detail_buy_collect"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x20"
            android:src="@drawable/chanel_collect" />

        <ImageView
            android:id="@+id/iv_detail_buy_share"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x40"
            android:layout_toStartOf="@+id/iv_detail_buy_collect"
            android:src="@drawable/share" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/colorDivision_2" />

    <WebView
        android:id="@+id/web_detail_buy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivision" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/x20">

        <TextView
            android:id="@+id/tv_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorOrange"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_detail_buy"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x80"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_bg_orange"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>