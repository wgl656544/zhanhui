<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivision"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/x20">

        <ImageView
            android:id="@+id/iv_my_info_back"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_my_info_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_my_info_photo"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/x120"
                    android:src="@drawable/personal_information_picture" />

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:id="@+id/rl_change_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:id="@+id/tv_personal_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_toEndOf="@+id/tv_personal_info_name"
                    android:text="嘻嘻哈哈" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_1"
                    android:text="修改"
                    android:textColor="#3E8DBC"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_1"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:id="@+id/rl_choice_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_choice_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_2"
                    android:text="设置"
                    android:textColor="#3E8DBC"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_2"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:id="@+id/rl_choice_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="生日"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_choice_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_3"
                    android:text="获星座标签"
                    android:textColor="#3E8DBC"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_3"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:id="@+id/rl_my_info_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="常住地"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_my_info_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_4"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_4"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x20"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:id="@+id/rl_ship_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收货地址"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_5"
                    android:text="修改/添加"
                    android:textColor="#3E8DBC"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_5"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_8"
                    android:text="131****9971"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_8"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="密码"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_9"
                    android:text="修改"
                    android:textColor="#3E8DBC"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_personal_info_9"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_my_bg_click"
                android:padding="@dimen/x25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="第三方账号绑定"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_toStartOf="@+id/iv_personal_info_qq"
                    android:src="@drawable/personal_info_weixin" />

                <ImageView
                    android:id="@+id/iv_personal_info_qq"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x60"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_personal_info_10"
                    android:src="@drawable/personal_info_qq" />

                <ImageView
                    android:id="@+id/iv_personal_info_10"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="@dimen/x25"
                android:background="@color/font_black_5" />

            <Button
                android:id="@+id/btn_exit_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:layout_margin="@dimen/x30"
                android:background="@drawable/personal_info_button"
                android:text="退出当前账号"
                android:textSize="17sp" />
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/colorDivision" />

</LinearLayout>