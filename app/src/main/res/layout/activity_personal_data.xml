<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:background="@drawable/personal_data_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y300"
            android:background="#ba000000"
            android:orientation="vertical"
            android:padding="@dimen/x20">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_personal_info_back"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/back_white" />

                <LinearLayout
                    android:id="@+id/ll_personal_myInfo"
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/x60"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/personal_data_bg_2">

                    <ImageView
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/x10"
                        android:src="@drawable/personal_data_write" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="个人资料"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_personal_data_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x50"
                    android:padding="@dimen/x20"
                    android:src="@drawable/personal_data_touxiang" />

                <TextView
                    android:id="@+id/tv_personal_data_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:layout_toEndOf="@+id/iv_personal_data_picture"
                    android:text="嘻嘻哈哈"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_personal_data_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_personal_data_name"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_toEndOf="@+id/iv_personal_data_picture"
                    android:text="常住地：广州"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_personal_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_personal_data_address"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_toEndOf="@+id/iv_personal_data_picture"
                    android:text="关注0 | 展会0"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableBottom="@drawable/personal_data_orange"
            android:text="评论" />

        <Button
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableBottom="@drawable/personal_data_orange"
            android:text="图片" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/font_black_5" />

    <ListView
        android:id="@+id/lv_personal_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>