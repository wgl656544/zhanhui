<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_home"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="#FF6634"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x10"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x14"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/xiahua" />

        <LinearLayout
            android:id="@+id/ll_home_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x20"
                android:src="@drawable/sousuo" />
        </LinearLayout>

        <ImageView
            android:padding="@dimen/x15"
            android:id="@+id/iv_main_add"
            android:layout_width="@dimen/x88"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/tianjia" />


    </LinearLayout>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/ptr_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/sl_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">


                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/rollpagerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x250"
                    app:rollviewpager_play_delay="3000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/x30">

                    <LinearLayout
                        android:baselineAligned="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_exhibition"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/zhanhui" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/zhanhui"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_info"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/zixun" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/information"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_ticket"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/menpiao" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/ticket"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:baselineAligned="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_team"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/tuangou" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/groupbuy"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_find"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/faxian" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/find"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_busi"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/zhaoshang" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/business"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginTop="@dimen/x50"
                    android:background="@color/font_black_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x150"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/x15"
                        android:padding="@dimen/x10"
                        android:src="@drawable/ex_tr" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x90"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/font_black_5" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x150"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ViewFlipper
                            android:id="@+id/viewFlipper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoStart="true"
                            android:background="@color/white"
                            android:flipInterval="2500"
                            android:inAnimation="@anim/anim_marquee_in"
                            android:outAnimation="@anim/anim_marquee_out" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="@color/colorDivision" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/zhanhui"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/ll_home_exhibit_more"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_exhibit_more"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x60"
                            android:src="@drawable/gengduo" />
                    </LinearLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x15"
                    android:layout_marginStart="@dimen/x15" />

                <View
                    android:id="@+id/view_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="@color/colorDivision" />

                <RelativeLayout
                    android:id="@+id/rl_title_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x25">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/reserve"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/ll_home_ticket_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/more"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageviewMore"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x60"
                            android:src="@drawable/gengduo" />
                    </LinearLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_menpiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x15"
                    android:layout_marginStart="@dimen/x15" />

                <View
                    android:id="@+id/view_mid_adver"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="@color/colorDivision" />

                <ImageView
                    android:id="@+id/iv_home_fragment_mid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y180"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic" />

                <View
                    android:id="@+id/view_team"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="@color/colorDivision" />

                <RelativeLayout
                    android:id="@+id/rl_title_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/groupbuy"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/ll_home_team_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x18">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/more"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageviewMore1"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x60"
                            android:src="@drawable/gengduo" />

                    </LinearLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_tuangou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x15"
                    android:layout_marginStart="@dimen/x15" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="@color/colorDivision" />
                <RelativeLayout
                    android:id="@+id/rl_detail_more_blog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x20"
                        android:layout_marginTop="@dimen/x15"
                        android:text="@string/message_introduce"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/ll_home_more_blog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/more"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/x20"
                            android:layout_marginStart="@dimen/x20"
                            android:src="@drawable/more" />

                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_info"
                    android:layout_marginStart="@dimen/x15"
                    android:layout_marginEnd="@dimen/x15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrFrameLayout>


</LinearLayout>