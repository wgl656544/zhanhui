<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="#FF6634"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_home_fragment_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center" />

        <ImageView
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x14"
            android:layout_gravity="center"
            android:src="@drawable/xiahua" />

        <LinearLayout
            android:layout_width="@dimen/x480"
            android:layout_height="wrap_content"
            android:background="@drawable/sousuokuang"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x40"
                android:src="@drawable/sousuo" />

            <EditText
                android:id="@+id/et_home_fragment"
                android:layout_width="0dp"
                android:layout_height="@dimen/x60"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x10"
                android:layout_weight="1"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:maxLines="1" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_main_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x48"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x20"
                android:src="@drawable/tianjia" />
        </RelativeLayout>


    </LinearLayout>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/ptr_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">


                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/rollpagerview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x180"
                    app:rollviewpager_play_delay="3500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/x30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_exhibition"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/zhanhui" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/zhanhui"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_info"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/zixun" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/information"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_ticket"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/menpiao" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/ticket"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x30"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_team"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/tuangou" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/groupbuy"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_find"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/faxian" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/find"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/home_iv_busi"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x80"
                                android:layout_gravity="center"
                                android:src="@drawable/zhaoshang" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x21"
                                android:gravity="center_horizontal"
                                android:text="@string/business"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginTop="@dimen/x50"
                    android:background="@color/font_black_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x150"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/x15"
                        android:padding="@dimen/x10"
                        android:src="@drawable/ex_tr" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x90"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/x20"
                        android:background="@color/font_black_5" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/x150"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ViewFlipper
                            android:id="@+id/viewFlipper"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:autoStart="true"
                            android:background="@color/white"
                            android:flipInterval="3000"
                            android:inAnimation="@anim/anim_marquee_in"
                            android:outAnimation="@anim/anim_marquee_out" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/x22">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x35"
                        android:layout_marginRight="@dimen/x11"
                        android:text="@string/zhanhui"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x11"
                        android:layout_marginRight="@dimen/x11"
                        android:text="@string/haikou"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x11"
                        android:layout_marginRight="@dimen/x11"
                        android:text="@string/sanya"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x11"
                        android:layout_marginRight="@dimen/x11"
                        android:text="@string/boao"
                        android:textSize="18sp" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x35" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/reserve"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageviewMore"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x60"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/gengduo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/imageviewMore"
                            android:text="@string/more"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_menpiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x35" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="#e0e0e0" />

                <ImageView
                    android:id="@+id/iv_home_fragment_mid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y180"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/groupbuy"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <ImageView
                            android:id="@+id/imageviewMore1"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/x60"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/gengduo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/imageviewMore1"
                            android:text="@string/more"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rl_tuangou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x35" />


            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrFrameLayout>


</LinearLayout>