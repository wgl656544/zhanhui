<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/x20">

        <ImageView
            android:id="@+id/iv_home_fragment_info_back"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/information"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/font_black_5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <in.srain.cube.views.ptr.PtrFrameLayout
            android:id="@+id/ptr_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ex.administrator.zhanhui.SmoothListView.SmoothListView
                android:id="@+id/sl_home_fagment_infomation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp" />


        </in.srain.cube.views.ptr.PtrFrameLayout>

        <com.ex.administrator.zhanhui.view.homeInfoHeader.HomeInfoFilterView
            android:id="@+id/fv_home_fragment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>