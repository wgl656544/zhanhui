<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_find_exhibition_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_my_bg_click"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_find_exhibition_pic"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x180"
            android:layout_gravity="center"
            android:src="@drawable/default_pic" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/tv_find_exhibition_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三届博鳌"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_find_exhibition_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:text="海口 2017.01.02-2017.01.06" />

            <TextView
                android:id="@+id/tv_find_exhibition_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="海南镇博鳌镇博鳌会议中心1号" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x10"
                android:background="@color/font_black_5" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/font_black_5" />

</LinearLayout>