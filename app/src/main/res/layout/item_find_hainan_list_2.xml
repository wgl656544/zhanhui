<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_find_hainan_pic_2"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_find_hainan_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="广州生物岛好去处"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_find_hainan_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x50"
                android:layout_marginTop="@dimen/x20"
                android:background="@drawable/btn_map_city_choice"
                android:text="玩在海南"
                android:textColor="@drawable/orange_text" />

            <TextView
                android:id="@+id/tv_find_hainan_count_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:text="0人看过" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/colorDivision" />


</LinearLayout>