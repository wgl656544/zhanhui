<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_busi_type_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x200"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x200">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_team_list_pic"
            android:layout_width="@dimen/x190"
            android:layout_height="@dimen/x160"
            android:layout_centerVertical="true"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_team_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x30"
            android:layout_toRightOf="@+id/iv_team_list_pic"
            android:text="三亚特产"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_team_list_descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_team_list_title"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_toRightOf="@+id/iv_team_list_pic"
            android:text="产品描述"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_team_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_team_list_pic"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x10"
            android:text="￥2800"
            android:textColor="@color/colorOrange"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_team_list_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_team_list_pic"
            android:layout_alignStart="@+id/tv_team_list_descrip"
            android:text="三亚" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/font_black_5" />


</LinearLayout>