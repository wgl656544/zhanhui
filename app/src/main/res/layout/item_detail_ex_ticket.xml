<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_detail_ex_ticket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x105"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_detail_ex_ticket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="吴某某"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_detail_ex_ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="中科院院士中科院院士中科院院士" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_detail_ex_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:text="¥ 2800/人"
                android:textColor="@color/colorOrange"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_detail_ex_ticket"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y50"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:background="@drawable/buy"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>