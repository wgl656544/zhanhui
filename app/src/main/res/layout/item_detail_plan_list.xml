<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginStart="@dimen/x20">

        <ImageView
            android:id="@+id/iv_plan"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/plan" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_plan"
            android:layout_centerHorizontal="true"
            android:background="@color/colorOrange" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plan_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-01-01"
            android:textColor="@color/colorOrange" />

        <TextView
            android:id="@+id/tv_plan_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00-9:00"
            android:textColor="@color/colorOrange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开幕式"
            android:textColor="@color/colorOrange"
            android:textSize="16sp" />

        <TextView
            android:layout_marginBottom="@dimen/x100"
            android:id="@+id/tv_plan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家讲话，领导讲话" />

        <ImageView
            android:id="@+id/iv_plan_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>
</LinearLayout>