<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_margin="@dimen/x10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_collect_list"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x200"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_collect_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:layout_toEndOf="@+id/iv_collect_list"
            android:text="产品名称"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_collect_list_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_collect_list_name"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:layout_toEndOf="@+id/iv_collect_list"
            android:text="city"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_collect_list"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:layout_alignBottom="@+id/iv_collect_list"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginEnd="@dimen/x5"
            android:background="@drawable/button_bg_orange"
            android:text="取消关注"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>