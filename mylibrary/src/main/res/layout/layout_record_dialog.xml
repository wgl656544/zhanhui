<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/recording_hint_bg"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/mic_image"
        android:layout_width="40dp"
        android:layout_height="56dp"
        android:indeterminateDrawable="@drawable/record_voice_anim"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="@drawable/record_voice_anim" />

    <TextView
        android:id="@+id/recording_hint"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mic_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/move_up_to_cancel"
        android:textSize="12sp" />

</RelativeLayout>